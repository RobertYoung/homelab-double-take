[Unit]
Description=CompreFace - Face Recognition System
Documentation=https://github.com/exadel-inc/CompreFace
After=network.target docker.service
Wants=network.target
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
User=root
Group=root
WorkingDirectory={{ compreface_config_dir }}/docker-compose
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
ExecReload=/usr/bin/docker-compose restart
StandardOutput=journal
StandardError=journal
SyslogIdentifier={{ compreface_service_name }}
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target