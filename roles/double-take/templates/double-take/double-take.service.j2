[Unit]
Description=Double Take - Person Detection and Recognition
Documentation=https://github.com/jakowenko/double-take
After=network.target docker.service
Wants=network.target
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
User=root
Group=root
WorkingDirectory={{ double_take_config_dir }}/docker-compose
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
ExecReload=/usr/bin/docker-compose restart
StandardOutput=journal
StandardError=journal
SyslogIdentifier={{ double_take_service_name }}
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target